#!/usr/bin/env node

var coffee = require('coffee-script');

var streamline = require('streamline');

var compile = coffee.compile;

coffee.compile = function(content) {
	var result = compile(content);
	return content.indexOf('!!STREAMLINE!!') >= 0 ? streamline.transform(result) : result; 
}

global.error = console.log

require('coffee-script/lib/command').run();
